<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/small_margin"
    android:paddingStart="@dimen/medium_margin">

    <TextView
        android:id="@+id/tv_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorTextDark"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/icon_place"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_place_name"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:src="@drawable/ic_place_black_24dp"
        android:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon_place"
        android:layout_toEndOf="@+id/icon_place"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorTextDark"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/icon_insta"
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/icon_place"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginTop="17dp"
        android:src="@drawable/ic_instagram"
        android:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_posts_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon_insta"
        android:layout_toEndOf="@+id/icon_insta"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorTextDark"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_place_photo"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/icon_insta"
        android:layout_marginBottom="@dimen/large_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:scaleType="centerCrop"
        android:visibility="gone" />

</RelativeLayout>